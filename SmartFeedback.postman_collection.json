{
  "info": {
    "name": "Smart Feedback API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Ping",
      "request": { "method": "GET", "url": "http://localhost:5000/api/ping" }
    },
    {
      "name": "Submit Feedback (Positive)",
      "request": {
        "method": "POST",
        "header": [ {"key":"Content-Type","value":"application/json"} ],
        "body": { "mode": "raw", "raw": "{\n  \"message\": \"The service was excellent!\",\n  \"event\": \"Workshop\",\n  \"role\": \"guest\"\n}" },
        "url": "http://localhost:5000/api/feedback"
      }
    },
    {
      "name": "Submit Feedback (Negative)",
      "request": {
        "method": "POST",
        "header": [ {"key":"Content-Type","value":"application/json"} ],
        "body": { "mode": "raw", "raw": "{\n  \"message\": \"This was terrible, the worst.\",\n  \"event\": \"Seminar\",\n  \"role\": \"guest\"\n}" },
        "url": "http://localhost:5000/api/feedback"
      }
    },
    {
      "name": "Summary (All)",
      "request": { "method": "GET", "url": "http://localhost:5000/api/summary" }
    },
    {
      "name": "Summary (Event Filter)",
      "request": { "method": "GET", "url": {"raw":"http://localhost:5000/api/summary?event=Workshop","host":["http://localhost:5000"],"path":["api","summary"],"query":[{"key":"event","value":"Workshop"}] } }
    },
    {
      "name": "Events List",
      "request": { "method": "GET", "url": "http://localhost:5000/api/summary/events" }
    }
  ]
}
