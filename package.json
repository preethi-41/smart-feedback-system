  "description": "Smart Feedback Analysis app",
  "type": "module",
  "scripts": {
    "dev:server": "node backend/src/server.js",
    "start:backend": "set PORT=5000&& node backend/src/server.js",
    "start:frontend": "npx http-server frontend -p 5500",
